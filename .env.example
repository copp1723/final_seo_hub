# Database
DATABASE_URL=postgresql://user:password@host/database

# App Configuration
APP_NAME=rylie-seo-hub
NODE_ENV=development
PORT=3001

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth (Required for authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Encryption (Required for token storage)
ENCRYPTION_KEY=your-64-character-hex-encryption-key

# GA4 Integration (Required for analytics)
GA4_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GA4_TOKEN_ENCRYPTION_KEY=your-ga4-encryption-key

# OpenRouter API (Required for AI chat)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# SEOWorks Integration (Required for webhook)
SEOWORKS_WEBHOOK_SECRET=your-webhook-secret